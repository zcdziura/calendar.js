{
    "compilerOptions": {
        "allowJs": true,
        "lib": [ "es2015" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2015"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/**/*", "**.*.js"
    ]
}